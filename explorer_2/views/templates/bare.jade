doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title= title
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		link(rel='stylesheet' href='/css/main.min.css?v=#{csshash}')
		
		//- Custom CSS Block
		block css

		//- Custom Head Block
		block head

	//- Body
	body
		//load image asap
		img(src="/img/IBM_Blockchain_BMX_icon.svg" hidden)
		#closingTimeWrap
			#closingHeader
				#closingHeaderText #{lang.closing_time_header}
			#closingTextWrap
				p #{lang.closing_time_msg}
				br
				button()#closingButton #{lang.resume}

		#closingScreen

		#modalScreen

		#transactional-modal.bx--modal(data-modal="" tabindex="-1")
			#transactional-modal-innter.bx--modal-inner
		
		#passive-modal.bx--modal(data-modal="" tabindex="-1")
			#passive-modal-innter.bx--modal-inner
				
		#logoHeader
			if(network_id)
				a(href="/#{lang._LANG}/#{dash_ver}/network/#{network_id}").nav-logo
			else
				a(href="#").nav-logo
			span#nav-txt #{lang.ibm_blockchain}

		//- Main Content Block
		block content


		//- Footer
		div(style="height: 80px;")#footer_spacer &nbsp;
		#footer

		//- JavaScript
		script.
			var network_id = '#{network_id}';						//throw jade json over to JS
			var dash_ver = '#{dash_ver}';							//throw jade var over to JS
			var network_timestamp = Number('#{timestamp}');			//throw jade var over to JS
			var broker_ver = '#{broker_ver}';						//throw jade var over to JS
			var ZONE = '#{ZONE}';
			var RUN_MODE = '#{RUN_MODE}';
			var lang = !{JSON.stringify(lang)};						//throw jade object over to JS
			if(ZONE === 'local') ZONE = 'prod';
			console.log('network_id', network_id, dash_ver, network_timestamp, broker_ver, ZONE, RUN_MODE);
			console.log('lang', lang._LANG);


		script(src="/js/concat/js_libs.min.js" type='text/javascript')
		script(src="/js/analytics.js?v=#{jshash}" type='text/javascript')

		//- Custom JS Block
		block js
