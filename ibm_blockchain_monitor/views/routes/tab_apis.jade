extends ../templates/bare

block js
	script(src='/js/concat/swagger_lib.min.js' type='text/javascript')
	script(src='/js/0_helper.js?v=#{jshash}' type='text/javascript')
	script(src='/js/0_common.js?v=#{jshash}' type='text/javascript')
	script(src='/js/tips.js?v=#{jshash}' type='text/javascript')
	script(src='/js/tab_apis.js?v=#{jshash}' type='text/javascript')
	script(src='/js/lib/swagger/lang/#{lang._PREFIX}.js?v=#{jshash}' type='text/javascript')

block content
	include ../templates/nav

	#mainPanel
	
		// ============ Top of Page ============ //
		include ../templates/header

		br

		.mainContentWrap
			.thinBorder

			.main.swagger-section
			
				#apiTxtWrap
					// ============ URL Selection Panel ============ //
					p 
						span #{lang.api_msg1}&nbsp;
						a(href="https://github.com/hyperledger/fabric/tree/master/sdk/node" target="_blank") #{lang.hyperledger_fabric_client}
						span .
					br
					br

					div
						p &nbsp;#{lang.select_peer}:
						select.peerOptionWrap
							option#badPeerOption #{lang.loading}

						input(type="text" id="urlFullPath" value= "...")

					p(style="font-size:13px; float:left; margin-left: 195px;") (#{lang.api_msg2})
					
					
				// ============ Enroll IDs Panel ============ //
				if(ui_options.api_enroll_ids === true)
					div
						h2#enrollWrapToggle.thinBorder
							span #{lang.network_ids_title} 
							span.smallerFont#enrollWrapStatus #{lang.expand}
						#enrollIDsWrap 
							span.small(style="margin-top:5px; margin-right:15px;") (#{lang.copy_tip})
							span.small #{lang.enroll_id_msg}
							
							#enrollIDsGoHere #{lang.loading}
							br

				
				br
				br

				h2.thinBorder #{lang.api_title}
				
				
				// ============ Swagger UI ============ //
				div(id="message-bar" class="swagger-ui-wrap" data-sw-translate) &nbsp;
				div(id="swagger-ui-container" class="swagger-ui-wrap")