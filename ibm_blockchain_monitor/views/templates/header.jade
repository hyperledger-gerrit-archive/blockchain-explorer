.mainContentWrap
	div#planNameWrap &nbsp;!{display_name}
	.networkIdWrap
		span.networkIdText#networkId !{network_id}
		button.copyButton.copyButtonStyle(data-clipboard-text="#{network_id}") #{lang.copy}

		#openTipsLink
			svg#helpIcon
				use(xlink:href="/img/icons/sprite.svg#common--help")
			a(href="") #{lang.tips}

		// ============ Refresh Timer Panel ============ //
		#refreshWrap(hidden)
			span &nbsp;&nbsp;-&nbsp;
			input(type='range' min = '0' max = '100' value='50')#reBar
			span &nbsp;+&nbsp;&nbsp;&nbsp;&nbsp;
			span.refreshLegend #{lang.refresh_title}&nbsp;&nbsp;
			span#time_left 03:00
			span &nbsp;/&nbsp;
			span#time 3:00